<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/spinnerDropDownItemStyle"
    android:background="?attr/navigationDrawerSelector"
    android:layout_width="match_parent"
    android:layout_height="?attr/dropdownListPreferredItemHeight" >
 
    <ImageView
        android:id="@+id/editor_drawer_list_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/empty_string"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_events_drawer_profile_filter_0" />
    
    <TextView
        android:id="@+id/editor_drawer_list_item_title"
        android:textColor="?attr/navigationDrawerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editor_drawer_list_item_icon"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:singleLine="true" />
    
 	<TextView
        android:id="@+id/editor_drawer_list_item_subtitle"
        android:textColor="?attr/navigationDrawerSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editor_drawer_list_item_title"
        android:layout_toRightOf="@+id/editor_drawer_list_item_icon"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />    
 
</RelativeLayout>